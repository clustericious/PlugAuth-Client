#!/usr/bin/env perl

# PODNAME: simpleauthclient
# ABSTRACT: simple auth command line client
our $VERSION = '0.10'; # VERSION

use strict;
use warnings;
use File::Spec;
use File::Basename 'dirname';

use lib join '/', File::Spec->splitdir(dirname(__FILE__)), 'lib';
use lib join '/', File::Spec->splitdir(dirname(__FILE__)), '..', 'lib';

use SimpleAuth::Client;
use Clustericious::Client::Command;
use Log::Log4perl::CommandLine (':all', ':loginit' => <<"EOT");
           log4perl.rootLogger = INFO, Screen
           log4perl.appender.Screen = Log::Log4perl::Appender::ScreenColoredLevels
           log4perl.appender.Screen.layout = Log::Log4perl::Layout::PatternLayout
           log4perl.appender.Screen.layout.ConversionPattern = [%-5p] %d %F{1} (%L) %m %n
EOT

Clustericious::Client::Command->run(SimpleAuth::Client->new, @ARGV);


__END__
=pod

=head1 NAME

simpleauthclient - simple auth command line client

=head1 VERSION

version 0.10

=head1 AUTHOR

Graham Ollis <gollis@sesda2.com>

